<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">
<android.support.v7.widget.Toolbar
    android:id="@+id/tool"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:minHeight="?attr/actionBarSize">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Đ.Xuất"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:onClick="dangxuat"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="22dp"
            android:text="Home"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:src="@drawable/find"/>
    </LinearLayout>


</android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:onClick="usermanager"
                    android:background="@drawable/stocke"
                    android:layout_marginRight="70dp"
                    android:src="@drawable/images"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <ImageView
                    android:onClick="loaisach"
                    android:background="@drawable/stocke"
                    android:src="@drawable/images2"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:onClick="sach"
                    android:background="@drawable/stocke"
                    android:layout_marginRight="70dp"
                    android:src="@drawable/images1"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <ImageView
                    android:onClick="hoadon"
                    android:background="@drawable/stocke"
                    android:src="@drawable/anh2"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:onClick="top10"
                    android:background="@drawable/stocke"
                    android:layout_marginRight="70dp"
                    android:src="@drawable/top10"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <ImageView
                    android:onClick="thongke"
                    android:background="@drawable/stocke"
                    android:src="@drawable/a"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>